<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#cae2fa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relativelayout">

            <!--            <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="80dp"-->
            <!--                android:layout_height="80dp"-->
            <!--                android:elevation="12dp"-->
            <!--                android:id="@+id/cardviewimage"-->
            <!--                app:cardCornerRadius="40dp"-->
            <!--                >-->

            <!--                <ImageView-->
            <!--                    android:id="@+id/imageView1"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="80dp"-->
            <!--                    android:scaleType="centerCrop"-->
            <!--                    tools:srcCompat="@tools:sample/avatars" />-->
            <!--            </androidx.cardview.widget.CardView>-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewimage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardviewimage"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        />


                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tejraj Khanvilkar"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@id/ll1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From  : "
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        />


                    <TextView
                        android:id="@+id/cardFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infosys"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/ll2"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="Phone: "
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/cardPhnno"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="8007777482"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll3"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temp : "
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/cardTemp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="95 f"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/visitedStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewimage"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visited Status : "
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/card_visitedstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text=" Rescheduled"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/mmettime"
                android:layout_below="@id/visitedStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date       : "
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25-02-2021"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="9dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tomeet"
                android:layout_below="@id/mmettime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To meet : "
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/card_tomeetname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr Atul Kulkarni"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="9dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/tomeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose : "
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/cardPurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To discuss about the  placements of VIIT students"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="9dp"/>



            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                app:icon="@drawable/ic_call"
                app:iconTint="@color/colorWhite"
                android:layout_width="match_parent"
                android:id="@+id/visitor_call"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="call"
                android:textColor="@color/white"
                android:backgroundTint="#58d10d"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                app:icon="@drawable/ic_message"
                app:iconTint="@color/colorWhite"
                android:id="@+id/visitor_message"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Message"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#00aaff"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>