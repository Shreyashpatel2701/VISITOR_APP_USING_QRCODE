<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:backgroundTint="#cae2fa"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/higherAuthority_img_cardview"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/higherAuthority_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/higherAuthority_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/higherAuthority_img_cardview"
                android:text="Tejraj Satej Khanvilkar"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/higherAuthority_name"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/higherAuthority_img_cardview"
                android:text="Position : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/higherAuthority_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/higherAuthority_name"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/position"
                android:text="Associate Dean Industry"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phnno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/higherAuthority_position"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/higherAuthority_img_cardview"
                android:text="Phn no   : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/higherAuthority_phnno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/higherAuthority_position"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/position"
                android:text="8007777482"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                app:icon="@drawable/ic_call"
                app:iconTint="@color/colorWhite"
                android:layout_width="match_parent"
                android:id="@+id/user_call"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="call"
                android:textColor="@color/white"
                android:backgroundTint="#58d10d"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:layout_margin="5dp"
                app:icon="@drawable/ic_message"
                app:iconTint="@color/colorWhite"
                android:id="@+id/user_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Message"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#00aaff"/>/>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>