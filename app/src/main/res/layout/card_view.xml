<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#cae2fa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relativelayout">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:layout_marginTop="30dp"
                android:id="@+id/cardviewimage"
                app:cardCornerRadius="40dp"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardviewimage"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        />


                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tejraj Khanvilkarrrrrrrrrrrrrrr"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll1"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From : "
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        />


                    <TextView
                        android:id="@+id/cardFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infosys"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll2"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="Phone : "
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/cardPhnno"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="8007777482"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/ll3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temp : "
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/cardTemp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="95 f"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/purpose"
                android:layout_below="@id/rl2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purpose : "
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/cardPurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="To discuss about the  placements of VIIT students"
                    android:textColor="@color/black"
                    android:textSize="20sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/purpose"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested \nTime : "
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/cardtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="12:15"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="3dp"
                app:icon="@drawable/ic_tick"
                app:iconTint="@color/colorWhite"
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8dp"
                android:layout_weight="1.1"
                android:text="Accept"
                android:textColor="@color/white"
                android:backgroundTint="#58d10d"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>


            <com.google.android.material.button.MaterialButton
                android:textSize="8dp"
                android:layout_margin="3dp"
                app:icon="@drawable/ic_access_time"
                app:iconTint="@color/colorWhite"
                android:id="@+id/reschedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Reschedule"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#00aaff" />

            <com.google.android.material.button.MaterialButton
                android:layout_margin="3dp"
                android:textSize="8dp"
                app:icon="@drawable/ic_stop"
                app:iconTint="@color/colorWhite"
                android:id="@+id/deny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Deny"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#C41E3A"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>