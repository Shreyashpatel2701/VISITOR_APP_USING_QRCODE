<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">


    <TextView
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_person"
        android:drawableLeft="@drawable/ic_person"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT PROFILE DATA"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAlignment="center"
        android:backgroundTint="#cae2fa">

    </TextView>


    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"

        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/updateprofilepic"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_photo"
        android:drawableLeft="@drawable/ic_photo"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE PROFILE PHOTO"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAlignment="center" android:backgroundTint="#cae2fa">

    </TextView>



    <TextView
        android:id="@+id/updateprofilename"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_person"
        android:drawableLeft="@drawable/ic_person"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE NAME"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAlignment="center"
        android:backgroundTint="#cae2fa">

    </TextView>

    <TextView
        android:id="@+id/updateprofilepassword"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/ic_person"
        android:drawableLeft="@drawable/ic_person"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE PASSWORD"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAlignment="center"
        android:backgroundTint="#cae2fa">

    </TextView>


         <TextView
             android:id="@+id/updateprofilephone"
             android:background="@drawable/edit"
             android:drawableStart="@drawable/ic_person"
             android:drawableLeft="@drawable/ic_person"
             android:layout_margin="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="UPDATE PHONE NUMBER"
             android:layout_gravity="center"
             android:textSize="15dp"
             android:textAlignment="center"
             android:backgroundTint="#cae2fa">

         </TextView>



     </LinearLayout>




</ScrollView>